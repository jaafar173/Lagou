body{
    line-height: 22px;
}
.container{
    border: 1px solid red;
    height: 800px;
}
#sidebar{
    width: 230px;
    float: left;
    position: relative;
    border: 1px solid red;
    margin-top: 50px;
    margin-left: 30px;
}
.mainNavs{
    background: #fafafa;
}
.menu_box{
    border: 1px solid green; 
}
.menu_main{
    padding: 6px 12px;
    border: 2px solid #fafafa;
    border-right:0;
    overflow: hidden;
    position: relative; 
}
.menu_main h2{
    font-size: 18px;
    padding-left: 8px;
}
.menu_main span{
    float: right;
}
.menu_main a{
    color: #555;
    padding-left: 8px;
    margin: 0 6px 6px 0;
    white-space: nowrap;
}
.menu_main a:hover{
    color: #00b38a;
}
.menu_sub{
     
    width: 540px;
    position: absolute;
    padding: 15px 30px 5px;
    left: 230px;
    top: -80px;
    border: 2px solid #c9cbce;
    display: none;
}
.reset dd a{
    color: #555;
    margin:0 10px 10px 0;
    line-height: 20px;
}
.reset dd a:hover{
    color: #00b38a;
}
.reset dt a{
    color: #555;
}
.reset dt a:hover{
    color: #00b38a;
}


/*右部*/
.content{
    margin-top: 50px;
    margin-left: 30px;
}
#search{
    border: 2px solid #00b38a;
    border-right:0; 
    padding: 5px 8px 5px 10px;
}
.input-group{
    width: 680px;
}
#btn_search{
    float: left;
    width: 120px;
    background: #00b38a;
    padding: 8px 8px 5px 10px;
    margin-top: -1px;
}
.hotSearch {
    overflow: hidden;
    margin: 6px 0 18px;
}
.hotSearch dt{
    width:70px;
    font-size: 14px;
    float: left;
}
.hotSearch dd{
    float: left;
    margin:0 8px;
}
.banner_bg{
    float: left;
    list-style: none;

}
.thumbs{
    float: left;
    list-style: none;
    margin-left: 20px;
}
.thumbs li{
    margin-bottom: 7px;
    border: 3px solid #d3d3d3;
}
.data_thumbs{
    float: left;
    list-style-type: none;
   
}
.data_thumbs li{
    float: left;
    background: #fff;
    margin-right: 12px;
    border: 2px solid #fafafa;
    position: relative;
}
.data_thumbs li a{
    text-decoration: none;
}
.data_thumbs li a em{
    display: block;
    width: 100px;
    height: 5px;
    margin-left: 6px;
    background: rgba(255,255,255,.3);
}
.data_thumbs li a h2{
    font-size: 24px;
    height: 24px;
    color: white;
    line-height: 24px;
    margin: 10px 8px 8px;
    font-weight: 400;
    text-align: center;
    overflow: hidden;
}
.data_thumbs li a p{
    color: white;
    font-size: 12px;
    margin: 6px 8px;
    line-height: 18px;
}
.hot_info{
    position: relative;
    width: 113px;
    height: 113px;
    background: #00b38a;
    opacity: 0.8;
    display: none;
}

/*职位列表*/
#job-tab{
    float: left;
    background: #f6f6f6;
    width:94%;
}
#tab-content{
    float: left;
}
.position-list-item{
    float: left;
    width: 744px;
    height: 123px;
    overflow: hidden;
    border-bottom: 1px dashed #e1e1e1;
    /*border: 1px solid red ;*/
}
